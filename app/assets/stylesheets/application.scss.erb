@import 'bootstrap-sprockets';
@import 'bootstrap';

$btnAddColor: rgb(81, 186, 81);
$btnIndexColor: rgb(69, 146, 250);
$btnDeleteColor: rgb(255, 99, 99);
$btnLoginColor: rgb(41, 124, 206);
$btnLogoutColor: rgb(177, 46, 177);
$transparentWhiteBackground: rgba(255,255,255,.6);
$transparentRedBackground: rgba(249, 0, 0, 0.5);
$mainFontColor: rgb(255, 255, 255);

html,
body { height: 100%; }

body { 
    color: rgb(0, 0, 0); 
    background-image: url('<%= asset_path("background.jpg") %> ');
    background-attachment: fixed;
    background-size: cover;
}

footer,
main { padding: 0 1rem; }

header {
    margin-bottom: -28px;
    background-image: url('chalkboard.png');
    color: $mainFontColor;
}

main {
    padding-bottom: 4rem;
}

ul {
    -webkit-margin-before: 0;
    -webkit-padding-start: 0;
}

li { list-style-type: none; }

.logo {
    height: 80px;
    float: left;
    margin: 5px 15px -16px 5px;
}

.brand { 
    float: left;
    font-family: 'Amatic SC', sans-serif;
    h1 { 
        font-size: 50px; 
        margin-top: 5px;
    }
}

.menu-btn {
    display: inline-block;
    padding: 10px 0;
    border-radius: 4px;
    color: $mainFontColor;
    width: 100%;
    text-align: center;
    font-weight: bold;
    font-size: 2.5rem;
    font-family: 'Amatic SC', sans-serif;
    &:hover { color: $mainFontColor; }
}

.btnAdd { 
    background-color: $btnAddColor;
    &:hover { background-color: darken($btnAddColor, 10%); }
}

.btnIndex { 
    background-color: $btnIndexColor;
    &:hover { background-color: darken($btnIndexColor, 10%); }
}

.btnDelete { 
    background-color: $btnDeleteColor;
    &:hover { background-color: darken($btnDeleteColor, 10%); }
}

.btnLogin {
    background-color: $btnLoginColor;
    width: 100%;
    &:hover { background-color: darken($btnLoginColor, 10%); }
}

.btnLogout {
    background-color: $btnLogoutColor;
    &:hover { background-color: darken($btnLogoutColor, 10%); }
}
    

.main-nav {
    ul {
        list-style-type: none;
        li {
            display: inline-block;
            margin-right: 1%;
            width: 23%;
        }
        li.loggedOut {
            margin-left: 16%;
            width: 26%;
        }
    }
}

.container {
    color: $mainFontColor
    a { 
        color: $mainFontColor; 
        margin-top: 10px;
    }
}

.page-title {
    color: $mainFontColor;
    font-weight: bold;
    font-size: 7rem;
    text-align: center;
    font-family: 'Amatic SC', sans-serif;
}

.beer-item,
.delete-beer-item {
    padding: 15px 10px;
    border-radius: 5px;
    text-align: center;
    margin-bottom: 10px;
    font-family: 'Coming Soon', sans-serif;
}

.beer-item { background-color: $transparentWhiteBackground; 
    ul li:last-child { margin-top: 10px; }
    &:hover { background-color: opacify($transparentWhiteBackground, .2); }
}

.no-underline { 
    text-decoration: none; 
    &:hover { text-decoration: none; }
}


.form-bkg {
    background-color: $transparentWhiteBackground;
    padding: 10px;
    border-radius: 5px;
}

label,
input[type='submit'] { 
    font-family: 'Coming Soon', sans-serif;
}    

.delete-beer-item { 
    background-color: $transparentRedBackground;
    color: $mainFontColor;
    &:hover { 
        background-color: opacify($transparentRedBackground, .4); 
        a {
            text-decoration: none;
        }
    }
}


@media screen and (min-width: 768px) {
    .logo {
        height: 115px;
        margin: 5px 30px -27px 30px;
    }
    
    .brand h1 { font-size: 7rem; }
    
    .main-nav {
        width: 50%;
        margin: 0 auto;
    }
    
    .container { 
        width: 80%;
        margin: 0 auto;    
    }
    
    .beer-item,
    .delete-beer-item {
        width: 60%;
        margin: 0 auto 10px auto;
    }
}

@media screen and (min-width: 950px) {
    .container { width: 70%; }
    
    .form-bkg { 
        width: 50%;
    }
}