@import 'bootstrap-sprockets';
@import 'bootstrap';

$btnAddColor: rgb(81, 186, 81);
$btnIndexColor: rgb(69, 146, 250);
$btnDeleteColor: rgb(255, 99, 99);
$btnLoginColor: rgb(41, 124, 206);
$btnLogoutColor: rgb(177, 46, 177);
$transparentWhiteBackground: rgba(255, 255, 255, 0.8);
$transparentRedBackground: rgba(249, 0, 0, 0.5);
$mainFontColor: rgb(255, 255, 255);

html,
body { height: 100%; }

body { 
    color: rgb(0, 0, 0); 
    background-image: url('<%= asset_path("background.jpg") %> ');
    background-attachment: fixed;
    background-size: cover;
}

header {
    margin-bottom: -28px;
    background-image: url('<%= asset_path("chalkboard.png") %>');
    color: $mainFontColor;
}

main {
    padding: 4rem 1rem;    
}

p, ul {
    -webkit-margin-before: 0;
    -webkit-padding-start: 0;
    -webkit-margin-after: 0;
}

li { list-style-type: none; }

.logo {
    height: 80px;
    float: left;
    margin: 5px 15px -16px 5px;
}

.brand { 
    float: left;
    font-family: 'Amatic SC', sans-serif;
    h1 { 
        font-size: 50px; 
        margin-top: 5px;
    }
}

.notice,
.alert { 
    color: rgb(255, 255, 255);
    text-align: center;
    margin-bottom: 0;
    text-shadow: 0px 3px 2px rgb(0, 0, 0);
}

.menu-btn {
    display: inline-block;
    padding: 10px 0;
    border-radius: 4px;
    color: $mainFontColor;
    width: 100%;
    text-align: center;
    font-weight: bold;
    font-size: 2.5rem;
    font-family: 'Amatic SC', sans-serif;
    &:hover { color: $mainFontColor; }
}

.btnAdd { 
    background-color: $btnAddColor;
    &:hover { background-color: darken($btnAddColor, 10%); }
}

.btnIndex { 
    background-color: $btnIndexColor;
    &:hover { background-color: darken($btnIndexColor, 10%); }
}

.btnDelete { 
    background-color: $btnDeleteColor;
    &:hover { background-color: darken($btnDeleteColor, 10%); }
}

.btnLogin {
    background-color: $btnLoginColor;
    width: 100%;
    &:hover { background-color: darken($btnLoginColor, 10%); }
}

.btnLogout {
    background-color: $btnLogoutColor;
    &:hover { background-color: darken($btnLogoutColor, 10%); }
}

.btnDown { margin-top: 10px; }    

.main-nav {
    padding-top: 2rem;
    ul {
        list-style-type: none;
        margin-bottom: 0;
        li {
            display: inline-block;
            margin-right: 1%;
            width: 23%;
        }
        li.loggedOut {
            margin-left: 16%;
            width: 26%;
        }
    }
}


.intro,
.page-title {
    color: $mainFontColor;
    text-transform: capitalize;
    font-size: 7rem;
    text-align: center;
    font-family: 'Amatic SC', sans-serif;
    background-image: url('<%= asset_path("chalkboard.png") %>');
    border-radius: 4px;
    margin: 10px auto 15px auto;
}

.page-title {
    font-weight: bold;
    width: 75%;
}

.search {
    width: 100%;
    margin: 0 auto 15px auto;
}

.filter {
    width: 100%;
    margin: 0 auto 30px auto;
}

#search,
#beer_filter {
    height: 34px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555555;
    margin: 0 auto;
    background-color: white;
    border: 1px solid #cccccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    -webkit-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
         -o-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
            transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
}

#search {
    width: 70%;
}

#beer_filter { 
    width: 85%;
}

.beer-item,
.delete-beer-item {
    padding: 5px 10px;
    border-radius: 5px;
    text-align: center;
    margin-bottom: 10px;
    font-family: 'Coming Soon', sans-serif;
}

.beer-item { background-color: $transparentWhiteBackground; 
    a.collapsed { margin-bottom: 10px; }
    ul li:last-child { margin-top: 10px; }
    &:hover { background-color: opacify($transparentWhiteBackground, .2); }
}

.no-underline { 
    text-decoration: none; 
    &:hover { text-decoration: none; }
}


.form-bkg {
    background-color: $transparentWhiteBackground;
    padding: 10px;
    border-radius: 5px;
}

label,
input[type='submit'] { 
    font-family: 'Coming Soon', sans-serif;
}    

.delete-beer-item { 
    background-color: $transparentRedBackground;
    color: $mainFontColor;
    &:hover { 
        background-color: opacify($transparentRedBackground, .4); 
        a {
            text-decoration: none;
        }
    }
}


@media screen and (min-width: 768px) {
    .logo {
        height: 115px;
        margin: 5px 30px -27px 30px;
    }
    
    .brand h1 { font-size: 7rem; }
    
    .main-nav {
        width: 50%;
        margin: 0 auto;
    }
    
    .container { 
        width: 80%;
        margin: 0 auto;    
        padding: 1.5rem;
    }
    
    .page-title { width: 60%; }
    
    .search {
        width: 56%;
    }
    
    .filter {
        width: 60%;
    }
    
    .beer-item,
    .delete-beer-item {
        width: 75%;
        margin: 0 auto 10px auto;
        padding: 15px 10px;
    }
    
    .form-bkg { 
        width: 80%;
        margin: 0 auto;
    }
}

@media screen and (min-width: 950px) {
    .container { width: 70%; }
    
    .form-bkg { width: 55%; }
    
    .search {
        width: 50%;
    }
    
    .filter { 
        width: 53%;
    }
}