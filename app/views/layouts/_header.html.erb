<header>
    <%= image_tag 'brewcellarlogo.png', class: 'logo', alt: 'Brew Cellar Logo' %>
    <div class='brand'>
        <h1>BrewCellar</h1>
    </div>
    <nav class='main-nav'>
        <ul>
            <% if current_user %>
                <li>Add Beer</li>
                <li>View Cellar</li>
            <% end %>
            <li>        
                <% if !current_user %>
                    <%= link_to 'Sign In', new_user_session_path %>
                <% else %>
                    <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
                <% end %>
            </li>
        </ul>

    </nav>
</header>
