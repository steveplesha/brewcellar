<h1>Your Cellar</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Brewery</th>
      <th>Brewyear</th>
      <th>Size</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% if user_signed_in? %>
      <tbody>
        <% @beers.each do |beer| %>
          <tr>
            <td><%= beer.name %></td>
            <td><%= beer.brewery %></td>
            <td><%= beer.brewyear %></td>
            <td><%= beer.size %></td>
            <td><%= beer.quantity %></td>
            <td><%= link_to 'Show', beer %></td>
            <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
            <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
  <% end %>
</table>

<br>
<% if user_signed_in? %>
    <%= link_to 'New Beer', new_beer_path %>
    <br>
    <%= link_to 'Signout', destroy_user_session_path, :method => :delete %>
<% end %>