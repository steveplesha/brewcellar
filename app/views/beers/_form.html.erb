<div class='form-bkg'>
     <%= form_for(@beer) do |f| %>
      <% if @beer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

          <ul>
          <% @beer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
            <%= f.label :brewery %>
            <%= f.text_field :brewery, autocomplete: "on", required: true, class: 'form-control', placeholder: 'Name of the brewery' %>
      </div>
      <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', required: true, placeholder: 'Name of the beer' %>
      </div>
      <div class="form-group">
            <%= f.label :beertype %>
            <%= f.text_field :beertype, class: 'form-control', required: true, placeholder: 'Type of beer' %>
      </div>
      <div class="form-group">
            <%= f.label 'Enjoy After Date' %>
            <%= f.date_field :enjoydate, class: 'form-control' %>
      </div>
        <div class="form-group">
            <%= f.label 'Expiration Date' %>
            <%= f.date_field :expirationdate, class: 'form-control' %>
      </div>
      <div class="form-group">
            <%= f.label :size %>
            <%= f.select :size, options_for_select([["12","12"],["22","22"],["25","25"]]), {},{class: 'form-control', placeholder: 'Size of the bottle'} %>
      </div>
      <div class="form-group">
            <%= f.label :quantity %>
            <%= f.text_field :quantity, class: 'form-control', required: true, placeholder: 'How many do you have?' %>
      </div>
      <div class="actions">
        <%= f.submit "Submit", class: 'btn btn-primary' %>
      </div>
    <% end %>
    <br>
    <%= link_to 'Back', beers_path %>
</div>